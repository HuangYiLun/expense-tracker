<div class="row">
  <div class="col">
    <form method="POST" action="/records/{{ record._id }}?_method=PUT">
      <div class="row">
        <div class="col-4">
          <label>＊必填欄位
          </label>
        </div>
        <div class="col-8 text-center">
          <label>請修改你的支出
          </label>
        </div>
      </div>

      <div class="row mt-3">
        <div class="col-4">
          <label for="name" class="col-form-label">名稱＊：
          </label>
        </div>
        <div class="col-8">
          <input type="text" name="name" id="name" class="form-control" value="{{ record.name }}" required>
        </div>
      </div>

      <div class="row mt-3">
        <div class="col-4">
          <label for="date" class="col-form-label">日期＊：
          </label>
        </div>
        <div class="col-8">
          <input type="date" name="date" id="date" class="form-control" value="{{ record.date }}" required>
        </div>
      </div>

      <div class="row mt-3">
        <div class="col-4">
          <label for="category" class="col-form-label">類別＊：
          </label>
        </div>
        <div class="col-8">
          <select class="form-select" name="category" id="category" aria-label="Default select example" required>
            <option selected>{{record.categoryId.name}}</option>
            {{#each categories}}
            <option value="{{ this.name }}">{{ this.name }}</option>
            {{/each}}
          </select>
        </div>
      </div>

      <div class="row mt-3">
        <div class="col-4">
          <label for="amount" class="col-form-label">金額＊：
          </label>
        </div>
        <div class="col-8">
          <input type="number" name="amount" id="amount" class="form-control" min="0" value="{{ record.number }}"
            required>
        </div>
      </div>

      <div class="row mt-3">
        <div class="col-4"></div>
        <div class="col-8">
          <div class="d-flex justify-content-end mt-3">
            <button class="btn btn-outline-success w-100" type="submit">送出</button>
          </div>
        </div>
      </div>

      <div class="row mt-2">
        <div class="col-4"></div>
        <div class="col-8">
          <div class="d-flex justify-content-end mt-3">
            <a class="btn btn-outline-primary w-100" href="/">返回</a>
          </div>
        </div>
      </div>

    </form>
  </div>
</div>